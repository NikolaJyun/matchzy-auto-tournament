{
    "name": "matchzy-auto-tournament",
    "version": "1.2.0",
    "description": "Tournament management API for CS2 MatchZy plugin",
    "private": true,
    "workspaces": [
        "api",
        "client"
    ],
    "main": "api/dist/index.js",
    "scripts": {
        "api:dev": "yarn workspace @matchzy/api dev",
        "api:build": "yarn workspace @matchzy/api build",
        "api:start": "yarn workspace @matchzy/api start",
        "client:dev": "yarn workspace @matchzy/client dev",
        "client:dev:host": "yarn workspace @matchzy/client dev:host",
        "client:build": "yarn workspace @matchzy/client build",
        "dev": "concurrently \"yarn dev:server\" \"yarn client:dev:host\" --names \"API,CLIENT\" --prefix-colors \"cyan,magenta\"",
        "dev:localhost": "concurrently \"yarn dev:server\" \"yarn client:dev\" --names \"API,CLIENT\" --prefix-colors \"cyan,magenta\"",
        "dev:server": "bash scripts/dev-server-with-logs.sh",
        "dev:client": "yarn client:dev",
        "dev:client:host": "yarn client:dev:host",
        "dev:debug": "LOG_LEVEL=debug tsx watch api/src/index.ts",
        "build": "yarn build:server && yarn build:client",
        "build:server": "yarn api:build",
        "build:server:tsc": "tsc -p api/tsconfig.json",
        "build:client": "yarn client:build",
        "start": "yarn api:start",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "docs": "bash scripts/serve-docs.sh",
        "docs:serve": "bash scripts/serve-docs.sh",
        "docs:build": "bash -c 'source docs/.venv/bin/activate 2>/dev/null || (python3 -m venv docs/.venv && source docs/.venv/bin/activate && pip install -q -r docs/requirements.txt) && source docs/.venv/bin/activate && mkdocs build --config-file docs/mkdocs.yml'",
        "db": "docker ps --format '{{.Names}}' | grep -q '^matchzy-postgres$' && echo '✅ PostgreSQL container is already running' || (docker ps -a --format '{{.Names}}' | grep -q '^matchzy-postgres$' && (docker start matchzy-postgres && echo '✅ Started existing PostgreSQL container') || (docker run -d --name matchzy-postgres -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=matchzy_tournament -p 5432:5432 postgres:16-alpine && echo '✅ Created and started PostgreSQL container'))",
        "db:stop": "docker stop matchzy-postgres 2>/dev/null && echo '✅ Stopped PostgreSQL container' || echo '⚠️  PostgreSQL container not running'",
        "db:restart": "yarn db:stop && sleep 1 && yarn db",
        "db:remove": "docker rm -f matchzy-postgres 2>/dev/null && echo '✅ Removed PostgreSQL container' || echo '⚠️  PostgreSQL container not found'",
        "test": "bash scripts/test-e2e-sharded.sh",
        "test:single": "bash scripts/test-e2e-all.sh",
        "test:sharded": "bash scripts/test-e2e-sharded.sh 10",
        "test:sharded:3": "bash scripts/test-e2e-sharded.sh 3",
        "test:sharded:5": "bash scripts/test-e2e-sharded.sh 5",
        "test:sharded:10": "bash scripts/test-e2e-sharded.sh 10",
        "test:manual": "playwright test -c tests/playwright.config.ts",
        "test:ui": "bash scripts/test-e2e-all.sh --ui",
        "test:api": "playwright test -c tests/playwright.config.ts tests/api",
        "test:api:manual": "playwright test -c tests/playwright.config.ts tests/api --ui",
        "test:ui:manual": "playwright test -c tests/playwright.config.ts tests/ui --ui",
        "test:veto": "playwright test -c tests/playwright.config.ts --grep @veto",
        "test:cs-major": "playwright test -c tests/playwright.config.ts --grep @cs-major",
        "test:report": "playwright show-report -c tests/playwright.config.ts",
        "test:install": "playwright install -c tests/playwright.config.ts",
        "screenshot:generate": "tsx scripts/generate-screenshots.ts",
        "screenshot": "bash scripts/generate-screenshots-with-docker.sh",
        "screenshot:keep": "bash scripts/generate-screenshots-with-docker.sh --keep-running",
        "docker:up": "docker compose -f docker/docker-compose.yml up -d --build",
        "docker:down": "docker compose -f docker/docker-compose.yml down",
        "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
        "docker:local:up": "docker compose -f docker/docker-compose.local.yml up -d --build",
        "docker:local:down": "docker compose -f docker/docker-compose.local.yml down --rmi local",
        "docker:local:logs": "docker compose -f docker/docker-compose.local.yml logs -f",
        "docker:local:rebuild": "docker image prune -f && docker compose -f docker/docker-compose.local.yml up -d --build --no-deps matchzy-tournament && docker image prune -f",
        "docker:rebuild": "docker image prune -f && docker compose -f docker/docker-compose.yml up -d --build --no-deps matchzy-tournament && docker image prune -f"
    },
    "keywords": [
        "cs2",
        "matchzy",
        "tournament",
        "express",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.56.1",
        "@types/cheerio": "^1.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/node-fetch": "^2.6.13",
        "@types/pg": "^8.15.6",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/react-router-dom": "^5.3.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "@vitejs/plugin-react": "^4.2.1",
        "cheerio": "^1.1.2",
        "concurrently": "^9.2.1",
        "esbuild": "^0.27.1",
        "eslint": "^9.39.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-compiler": "^19.1.0-rc.2",
        "eslint-plugin-react-hooks": "^7.0.1",
        "pino-pretty": "^13.1.2",
        "pixelmatch": "^7.1.0",
        "playwright": "^1.56.1",
        "pngjs": "^7.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.0",
        "sass": "^1.93.3",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    }
}
